{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="d-grid gap-2 d-md-flex justify-content-md-end my-2">
  <a class="add-setor-btn btn btn-sm btn-outline-secondary mx-2 " href="/admin/setores"><span class="material-symbols-outlined mt-2 ">arrow_back_ios</span></a>
</div>

<div class="card">
    <div class="card-body">
        <form action="/admin/setores/edit" method="post">
            <div class="form-floating mb-3">
                <input type="hidden" name="id" value="{{setor._id}}">
                <input type="text" class="form-control" value="{{setor.nome}}" name="nome" placeholder="Nome do setor">
                <label for="floatingInput">Nome do setor</label>
            </div>
            <div class="col-sm-1  w-auto">
                <button type="submit" class="btn btn-primary btn-danger">Editar Setor</button>
            </div>               
        </form> 
    </div>
</div>