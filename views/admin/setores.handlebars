<h2  style="text-align: center;">Gerenciamento de Setores</h2>
<nav class="navbar justify-content-center bg-light ">
    <a class="add-setor-btn btn btn-sm btn-outline-secondary" href="/admin/add-setor">Adicionar Setor</a>
    <a class="add-setor-btn btn btn-sm btn-outline-secondary mx-2" href="/admin/"><span class="material-symbols-outlined">arrow_back_ios</span></a>
</nav>
<div class="card">
    <div class="card-body">
        <table class="table table-hover">
        <thead>
            <tr>
              <th scope="col">Setor</th>
              <th scope="col">#</th>
              <th vlass="col-auto">#</th>
            </tr>
        </thead>
        <tbody>
            {{#each setores}}
            <tr>
                <th scope="row">{{nome}}</th>
                <td>
                <form action="/admin/setores/deletar" method="post">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button class="btn btn-outline-danger" type="submit"><span class="material-symbols-outlined">delete</span> Deletar</button>
                </form>
                </td>
                <td><a href="/admin/setores/edit/{{_id}}"><button class="btn btn-outline-warning"><span class="material-symbols-outlined">edit</span> Editar</button></a></td>
            </tr>
            {{else}}
            <td>Nenhum setor cadastrado</td>
            <td></td>
            <td></td>
            </tbody>
            {{/each}}
    </table>
    </div>
</div>


